<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/banner"
            android:layout_width="379dp"
            android:layout_height="110dp"
            android:src="@drawable/banner" />

        <TextView
            android:id="@+id/bus_stop"
            android:layout_width="395dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="0dp"

            android:layout_marginRight="0dp"
            android:fontFamily="@font/coolvetica"
            android:gravity="center"
            android:text="BusStop"
            android:textColor="#000000"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/NFSee"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"

            android:fontFamily="@font/coolvetica"
            android:text="NFSee"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/banner"
            android:layout_alignRight="@+id/banner"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical"
            app:srcCompat="@mipmap/ic_launcher_foreground_logo_white" />

        <TextView
            android:id="@+id/description"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bus_stop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"

            android:fontFamily="@font/coolvetica"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="McDonaldâ€™s (MCD) is a fast food, limited service restaurant with more than 35,000 restaurants in over 100 countries."
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/thin_banner"
            android:layout_width="347dp"
            android:layout_height="8dp"
            android:layout_below="@+id/viewPager_id"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/banner" />


    </RelativeLayout>
</ScrollView>