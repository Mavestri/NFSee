<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/banner"
            android:layout_width="379dp"
            android:layout_height="110dp"
            android:src="@drawable/banner" />

        <TableLayout
            xmlns:android = "http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/topActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:id="@+id/singleRow"
                android:layout_width="120dp"
                android:layout_height="211dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/NFSee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/coolvetica"
                    android:text="NFSee"
                    android:textColor="#ffffff"
                    android:textSize="40dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        app:srcCompat="@mipmap/ic_launcher_foreground_logo_white" />
                    </LinearLayout>
                <ImageButton
                    android:id="@+id/favourite_button"
                    android:layout_width="76dp"
                    android:layout_height="77dp"

                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="top|right"

                    android:background="@android:color/transparent"
                    app:srcCompat="@mipmap/ic_launcher_foreground_favourite_star" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/company_title"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="141dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"

            android:fontFamily="@font/coolvetica"
            android:text="Company_Title"
            android:textColor="#000000"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:fontFamily="@font/coolvetica"
            android:text="address"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:fontFamily="@font/coolvetica"
            android:text="phone"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/url"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:fontFamily="@font/coolvetica"
            android:text="url"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="131dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:srcCompat="@mipmap/ic_launcher_foreground_icon" />

        <TextView
            android:id="@+id/description"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/url"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"

            android:fontFamily="@font/coolvetica"
            android:gravity="center"
            android:text="McDonaldâ€™s (MCD) is a fast food, limited service restaurant with more than 35,000 restaurants in over 100 countries."
            android:textColor="#000000"
            android:textSize="20dp" />


        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            android:layout_below="@+id/description"
            android:layout_marginTop="21dp">
            />

            <ImageView
                android:id="@+id/text_image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher_foreground_icon" />

            <TextView
                android:id="@+id/test_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeetus" />


        </android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/thin_banner"
            android:layout_width="347dp"
            android:layout_height="8dp"
            android:layout_below="@+id/view_pager"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/banner" />

        <TextView
            android:id="@+id/hot_deal_desc_1"
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:layout_below="@+id/thin_banner"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:fontFamily="@font/coolvetica"
            android:gravity="center"
            android:text="Hot Dealz"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/hot_deal_image_1"
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:layout_below="@+id/thin_banner"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/hot_deal_desc_1"
            android:layout_toLeftOf="@+id/hot_deal_desc_1"
            app:srcCompat="@mipmap/ic_launcher_foreground_icon" />

        <ImageView
            android:id="@+id/hot_deal_image_2"
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:layout_below="@+id/hot_deal_image_1"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/hot_deal_desc_2"
            android:layout_toLeftOf="@+id/hot_deal_desc_2"
            app:srcCompat="@mipmap/ic_launcher_foreground_icon" />

        <TextView
            android:id="@+id/hot_deal_desc_2"
            android:layout_width="173dp"
            android:layout_height="145dp"
            android:layout_below="@+id/hot_deal_desc_1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:fontFamily="@font/coolvetica"
            android:gravity="center"
            android:text="Hot Dealz"
            android:textColor="#000000" />


    </RelativeLayout>
</ScrollView>